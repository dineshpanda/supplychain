<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All suppliers
    </h1>

    
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @suppliers.each do |supplier| %>
      <tr>
        <td>
          <%= supplier.id %>
        </td>

        <td>
          <%= time_ago_in_words(supplier.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(supplier.updated_at) %> ago
        </td>

        <td>
          <a href="/suppliers/<%= supplier.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @suppliers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
