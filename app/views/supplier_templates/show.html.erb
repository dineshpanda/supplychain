<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Supplier #<%= @supplier.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/suppliers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@supplier.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@supplier.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

