<!-- Validation failure messages -->
<% if @account_history.present? %>
  <% if @account_history.errors.any? %>
    <% @account_history.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new account history
</h1>


<hr>

<!-- Form account_history start -->
<form action="/create_account_history" method="post">
<!-- Form account_history end -->

  <!-- Label and input for owner_id start -->
  <div class="form-group">
    <label for="owner_id">
      Owner
    </label>

    <!-- Input for owner_id start -->
    <input type="text" id="owner_id" name="owner_id" class="form-control" value="<%= @account_history.owner_id %>">
    <!-- Input for owner_id end -->
  </div>
  <!-- Label and input for owner_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create account history
  </button>
</form>

<hr>

<a href="/account_histories">
  Go back
</a>
