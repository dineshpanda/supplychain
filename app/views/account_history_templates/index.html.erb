<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All account histories
    </h1>

    
      <a href="/account_histories/new" class="btn btn-block btn-outline-secondary">
        Add a new account history
      </a>
    
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "account_history_templates/account_histories_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @account_histories.each do |account_history| %>
      <tr>
        <td>
          <%= account_history.id %>
        </td>

        <td>
          <% if account_history.owner.present? %>
            <a href="/accounts/<%= account_history.owner.id %>">
              <%= account_history.owner.supplier_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(account_history.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(account_history.updated_at) %> ago
        </td>

        <td>
          <a href="/account_histories/<%= account_history.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @account_histories, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
