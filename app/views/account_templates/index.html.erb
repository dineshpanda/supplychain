<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All accounts
    </h1>

    
      <a href="/accounts/new" class="btn btn-block btn-outline-secondary">
        Add a new account
      </a>
    
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Supplier
        </th>

        <th>
          Acc type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @accounts.each do |account| %>
      <tr>
        <!-- Display account.id start -->
        <td>
          <%= account.id %>
        </td>
        <!-- Display account.id end -->

        <!-- Display account.supplier_id start -->
        <td>
          <%= account.supplier.email %>
        </td>
        <!-- Display account.supplier_id end -->

        <!-- Display account.acc_type start -->
        <td>
          <%= account.acc_type %>
        </td>
        <!-- Display account.acc_type end -->

        <!-- Display account.created_at start -->
        <td>
          <%= time_ago_in_words(account.created_at) %> ago
        </td>
        <!-- Display account.created_at end -->

        <!-- Display account.updated_at start -->
        <td>
          <%= time_ago_in_words(account.updated_at) %> ago
        </td>
        <!-- Display account.updated_at end -->

        <td>
          <a href="/accounts/<%= account.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @accounts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
