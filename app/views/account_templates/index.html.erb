<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All accounts
    </h1>

    
      <a href="/accounts/new" class="btn btn-block btn-outline-secondary">
        Add a new account
      </a>
    
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "account_templates/accounts_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Supplier
        </th>

        <th>
          Acc type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @accounts.each do |account| %>
      <tr>
        <td>
          <%= account.id %>
        </td>

        <td>
          <% if account.supplier.present? %>
            <a href="/suppliers/<%= account.supplier.id %>">
              <%= account.supplier.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= account.acc_type %>
        </td>

        <td>
          <%= time_ago_in_words(account.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(account.updated_at) %> ago
        </td>

        <td>
          <a href="/accounts/<%= account.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @accounts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
