<h1>
  Edit account #<%= @account.id %>
</h1>

<hr>

<form action="/update_account/<%= @account.id %>" method="post">


  <div class="form-group">
    <label for="acc_type">
      Acc type
    </label>

    <input type="text" id="acc_type" name="acc_type" class="form-control" value="<%= @account.acc_type %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update account
  </button>
</form>

<hr>

<a href="/accounts">
  Go back
</a>
